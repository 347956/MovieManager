@model IEnumerable<MovieManager_TeunBuis.Models.MovieListModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="MovieList" asp-action="CreateMovieList">Create a new movie list</a>
</p>
<table class="MovieList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.ActionLink("Details", "MovieListDetails", new { movieListId = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" asp-controller="User" asp-route-userName="@User.Identity.Name">Back to profile</a>

