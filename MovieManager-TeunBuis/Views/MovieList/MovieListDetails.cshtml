@model MovieManager_TeunBuis.Models.MovieListModel

@{
    ViewData["Title"] = "MovieListDetails";
}

<h1>@Model.Name</h1>

<div>
    <h4>This is the details page</h4>
    <p>Here you can view some details about your movie list</p>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieCount)
        </dd>
    </dl>
</div>
<h1>Movies:</h1>
<table class="MovieList">
    @foreach (MovieModel movie in Model.movieModels)
    {
    <tr class="MovieItem">
        <td>@movie.Name</td>
        <td>@movie.Genre</td>
        <td>@movie.GenreTwo</td>
        <td>@movie.Date</td>
        <td>@movie.Watched</td>
        <td>@Html.ActionLink("Delete", "DeleteMovieFromList", new { movieId = movie.ID, movielistId = Model.Id })</td>
    </tr>
    }
</table>
<div>
    @Html.ActionLink("Edit List", "EditMovieList", new { movieListId = Model.Id })    
</div>
<div>
    <p><a asp-action="AddMovieToList" asp-route-movieListId="@Model.Id"> Add Movie(s) to List</a></p>
    <p><a asp-action="Index" asp-route-userName="@User.Identity.Name">Back to List</a></p>   
</div>
