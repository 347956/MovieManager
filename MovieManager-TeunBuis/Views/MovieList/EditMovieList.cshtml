@model MovieManager_TeunBuis.Models.MovieListModel

@{
    ViewData["Title"] = "EditMovieList";
}

<h1>EditMovieList</h1>

<h4>MovieListModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMovieList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            <div class="form-group">
                <table class="MovieList">
                    @foreach (MovieModel movie in Model.movieModels)
                    {
                        <tr class="MovieItem">
                            <td>@movie.Name</td>
                            <td>@movie.Genre</td>
                            <td>@movie.GenreTwo</td>
                            <td>@movie.Date</td>
                            <td>@movie.Watched</td>
                            <td> @Html.ActionLink("Delete", "MovieListDeleteMovie", new { movieId =movie.ID })</td>
                        </tr>
                    }
                </table>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
